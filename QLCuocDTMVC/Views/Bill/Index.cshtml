
@{
    ViewBag.Title = "Index";
}

<h2>Tra cứu thông tin Hóa đơn</h2>

<div class="form-group">
    <input type="text" class="form-control" name="BillID" placeholder="Nhập mã hóa đơn để tra cứu" />
</div>

<input type="button" id="find" class="btn btn-success" value="Tra cứu" />

<script>
    $(document).ready(function () {
        $('#find').click(function() {
            window.location = '/Bill/Details/' + $('[name="BillID"]').val();
        });
    });
</script>