
@{
    ViewBag.Title = "Index";
}

<h2>Tra cứu thông tin Sim</h2>

<div class="form-group">
    <input type="text" class="form-control" name="IDSim" placeholder="Nhập ID Sim để tra cứu" />
</div>

<input type="button" id="find" class="btn btn-success" value="Tra cứu" />

<script>
    $(document).ready(function () {
        $('#find').click(function() {
            window.location = '/Sim/Details/' + $('[name="IDSim"]').val();
        });
    });
</script>